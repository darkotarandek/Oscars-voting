<Page x:Class="Seminar.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="500" MinHeight="200" MinWidth="200" Title="Home">
    <Page.Resources>
        <Style TargetType="Grid">
            <Setter Property="Background" Value="#FFCCE629"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="Azure"/>
        </Style>
    </Page.Resources>
    <Grid>
        <StackPanel>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="400"></RowDefinition>
                    <RowDefinition Height="200"></RowDefinition>
                </Grid.RowDefinitions>
                <Image Source="/Images/vote.jpg" Grid.Row="0" Margin="46,41,42,54"></Image>
                <Button Grid.Row="1" FontWeight="Bold" FontSize="32" Margin="115,0,97,100" Background="#FF6FDC88"><Hyperlink Name="navUri" Click="navUri_Click">Start</Hyperlink></Button>
            </Grid>
        </StackPanel>
    </Grid>
</Page>
